<div class="container">
  <div style="margin: 16px 250px">
  <h1>Add a new flat</h1>
    <form action="" class="form-group">
      <label for="name">Name</label><br>
      <input type="text" id="name" name="name" class="form-control"><br>
      <label for="address">Address</label><br>
      <input type="text" id="address" name="address" class="form-control"><br>
      <label for="description">Description</label><br>
      <textarea class="form-control" rows = "2" cols = "60" name = "description"></textarea><br>
      <label for="price_per_night">Price per night (Euro)</label><br>
      <input type="text" id="price_per_night" name="price_per_night" class="form-control"><br>
      <label for="number_of_guests">Number of guests</label><br>
      <input type="text" id="number_of_guests" name="number_of_guests" class="form-control"><br>
      <input type="submit" value="Create flat" class="btn btn-primary">
    </form>
  <%= link_to 'Back', flats_path %>
  </div>


</div>
