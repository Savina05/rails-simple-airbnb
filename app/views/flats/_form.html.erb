<%= form_for(flat) do |f| %>
  <div class="form-inputs">
    <%= f.text_field :name %>
    <%= f.text_field :address %>
    <%= f.text_field :description %>
    <%= f.text_field :price_per_night %>
    <%= f.text_field :number_of_guests %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
